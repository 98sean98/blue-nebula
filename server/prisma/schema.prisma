datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider           = "typegraphql-prisma"
  output             = "../src/artifacts/type-graphql"
  emitTranspiledCode = true
}

model User {
  id             String    @id @default(uuid())
  createdAt      DateTime  @default(now())
  username       String
  firstName      String
  lastName       String
  Session        Session[]
  AppDataCreator AppData[] @relation(name: "CreatorOnAppData")
  AppDataUpdater AppData[] @relation(name: "UpdaterOnAppData")

  @@unique([username])
}

model Session {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
}

model AppData {
  id   String @id @default(uuid())
  name String

  data Json? @db.Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  creatorId String?
  creator   User?   @relation(name: "CreatorOnAppData", fields: [creatorId], references: [id])

  updaterId String?
  updater   User?   @relation(name: "UpdaterOnAppData", fields: [updaterId], references: [id])

  @@unique([name])
}
