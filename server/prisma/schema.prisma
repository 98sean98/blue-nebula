datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider           = "typegraphql-prisma"
  output             = "../src/artifacts/type-graphql"
  emitTranspiledCode = true
}

model User {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  username   String
  firstName  String
  lastName   String
  Session    Session[]
  AppCreator App[]     @relation(name: "CreatorOnApp")
  AppUpdater App[]     @relation(name: "UpdaterOnApp")

  @@unique([username])
}

model Session {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
}

model App {
  id      String @id @default(uuid())
  name    String
  version Int    @default(1)

  data Json? @db.Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  creatorId String?
  creator   User?   @relation(name: "CreatorOnApp", fields: [creatorId], references: [id])

  updaterId String?
  updater   User?   @relation(name: "UpdaterOnApp", fields: [updaterId], references: [id])

  @@unique([name])
}
